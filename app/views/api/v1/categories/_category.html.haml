%tr
  %td= link_to category.name, api_v1_category_path(category)
  %td= link_to t("actions.edit"), edit_api_v1_category_path(category),
    :class => "btn btn-primary"
  %td= link_to t("actions.delete"), api_v1_category_path(category),
    :data => { :confirm => t("actions.confirm") }, method: :delete, :class => "btn btn-danger"
